{
  "compilerOptions": {
    "target": "ES6",                   // Output ES6 JavaScript
    "module": "CommonJS",              // Use CommonJS modules for Node.js
    "outDir": "./dist",                // Output directory for compiled files
    "rootDir": "./src",                // Directory for source files
    "strict": true,                    // Enable strict type-checking
    "esModuleInterop": true,           // Allow default imports for CommonJS
    "moduleResolution": "node",         // Resolve modules as Node.js does
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],          // Include all .ts files in src/
  "exclude": ["node_modules"]          // Exclude dependencies
}
